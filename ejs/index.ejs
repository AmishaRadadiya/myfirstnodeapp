        <span class="error" id="second"></span>
        <input type="text" accept="string" placeholder="Add Task Description" id="des" name="description">
    </div>
    <div class="errorbox">
        <span class="error" id="third"></span>
        <input type="submit" value="Add Task" id="Addtask" >
    </div>
</form>
<!-- </div> -->
    <div class="both">
        <div id="pan">
            <h2>Pending Task</h2>
            <h4></h4>
